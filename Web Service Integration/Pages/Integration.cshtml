@page
@using System.Text.Json
@model Web_Service_Integration.Pages.IntegrationModel
@{
    ViewData["Title"] = "Stock Data";
}
<link rel="stylesheet" type="text/css" href="~/css/display.css">

<h2>Example Stock Data</h2>

<div class="best-performer">
    <h3>Best Performer: @Model.BestPerformer</h3>
    <h4>Growth: @Model.BestGrowth</h4>
</div>

@if (Model.GrowthData != null && Model.GrowthData.Count > 0)
{
    <table class="growth-table">
        <thead>
            <tr>
                <th>Stock Symbol</th>
                <th>Growth</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model.GrowthData)
            {
                <tr>
                    <td>@entry.Key</td>
                    <td>@entry.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data available.</p>
}

